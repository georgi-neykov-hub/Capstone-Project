<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neykov.podcastportal" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PodcastPortal"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.subscriptions.MyPodcastsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.explore.ExploreActivity"/>

        <provider
            android:name="com.neykov.podcastportal.model.persistence.PodcastContentProvider"
            android:authorities="com.neykov.podcastportal"
            android:enabled="true"
            android:multiprocess="false"
            android:exported="false" >
        </provider>

    </application>

</manifest>
