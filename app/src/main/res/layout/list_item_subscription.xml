<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?cardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"

    tools:layout_width="192dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.neykov.podcastportal.view.widget.AspectRatioImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:widthToHeightRatio="1.0"
            tools:background="@color/photo_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginStart="@dimen/rhythm_space_single"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                tools:text="The Android Nerds" />

            <FrameLayout
                android:layout_width="@dimen/rhythm_control_half"
                android:layout_height="@dimen/rhythm_control_normal">

                <android.support.v7.widget.ActionMenuView
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:layout_gravity="end|center_vertical"
                    android:theme="@style/AppTheme.ActionMenu" />

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_scrim_gradient_inverse">

            <TextView
                android:id="@+id/episodeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_margin="@dimen/rhythm_space_single"
                android:gravity="end"
                android:singleLine="true"
                android:textAppearance="?attr/textAppearanceListItemSmall"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="5 Subscribers" />
        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

