<resources>

    <attr name="cardStyle" format="reference" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorButtonNormal">?attr/colorAccent</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="drawerArrowStyle">@style/AppTheme.Toolbar.DrawerArrowStyle</item>
        <item name="cardStyle">@style/AppTheme.CardViewStyle</item>
    </style>

    <style name="AppTheme.CardViewStyle" parent="CardView.Light">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorButtonNormal">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionMenu">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="actionMenuTextColor">@color/text_primary</item>
        <item name="colorAccent">@color/text_primary</item>
        <item name="colorControlNormal">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="android:actionBarStyle">@style/AppTheme.Settings.ActionbarStyle</item>
        <item name="actionBarTheme">@style/AppTheme.Toolbar</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="preferenceTheme">@style/PreferencesTheme</item>
    </style>

    <style name="PreferencesTheme" parent="@style/AppTheme">
        <item name="android:listPreferredItemPaddingStart">?attr/listPreferredItemPaddingLeft</item>
        <item name="android:listPreferredItemPaddingEnd">?attr/listPreferredItemPaddingRight</item>
        <item name="android:listPreferredItemPaddingLeft">?attr/listPreferredItemPaddingLeft</item>
        <item name="android:listPreferredItemPaddingRight">?attr/listPreferredItemPaddingRight</item>
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen.Material</item>
        <item name="preferenceCategoryStyle">@style/Preference.CategoryPreferenceCompatFix</item>
        <item name="preferenceStyle">@style/Preference.Material</item>
        <item name="preferenceInformationStyle">@style/Preference.Information.Material</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference.Material</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompatFix</item>
        <item name="switchPreferenceStyle">@style/Preference.SwitchPreferenceCompatFix</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference.Material</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference.Material</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Material</item>
    </style>

    <style name="Preference.SwitchPreferenceCompatFix">
        <item name="android:layout">@layout/preference_material</item>
        <item name="android:widgetLayout">@layout/preference_switch</item>
        <item name="android:switchTextOn">@string/v7_preference_on</item>
        <item name="android:switchTextOff">@string/v7_preference_off</item>
    </style>

    <style name="Preference.CategoryPreferenceCompatFix" parent="Preference.Category">
        <item name="android:layout">@layout/preference_category_appcompat</item>
    </style>

    <style name="AppTheme.Settings.ActionbarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/AppTheme.Settings.ActionbarStyle.Title</item>
        <item name="titleTextStyle">@style/AppTheme.Settings.ActionbarStyle.Title</item>
    </style>

    <style name="AppTheme.Settings.ActionbarStyle.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
